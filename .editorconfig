# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org
# Đồng bộ giữa các IDE với nhau giúp code ngon hơn :">

root = true

[*]
indent_style = tab
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Javascripts
[*.js]
indent_style = tab
tab_width = 4

# Json, YAML and Configuration files
[.*rc,*.{json,yml}]
indent_style = space
indent_size = 2
